  "scripts": {
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:auth\" \"npm run start:user\" \"npm run start:shop\" \"npm run start:order\"",
    "start:gateway": "cd backend/api-gateway && npm run dev",
    "start:auth": "cd backend/auth-service && npm run dev",
